<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <Nullable>disable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <Authors>Huzaifa Tapal</Authors>
    <Company>Medtelligent</Company>
    <Description>Extensions to MudBlazor component library</Description>
    <Copyright>Copyright Â© $(Authors) 2020-$([System.DateTime]::Now.Year)</Copyright>
    <PackageVersion>1.0.2</PackageVersion>
    <PackageProjectUrl>https://github.com/Medtelligent/MT.MudBlazor.Extensions</PackageProjectUrl>
    <PackageLicenseUrl>LICENSE</PackageLicenseUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/Medtelligent/MT.MudBlazor.Extensions</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>Blazor, MudBlazor, Material, Material Design, Components, Blazor Components, Blazor Library</PackageTags>
  </PropertyGroup>


  <ItemGroup>
    <SupportedPlatform Include="browser" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="6.0.8" />
    <PackageReference Include="MudBlazor" Version="6.0.14" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\LICENSE">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>
  
  <ItemGroup>
    <Folder Include="wwwroot\" />
  </ItemGroup>

</Project>
